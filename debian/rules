#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: build-arch build-indep

build-arch: build-stamp
build-indep: build-stamp

build-stamp: configure-stamp
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	install -Dm 755 $(CURDIR)/todo_indicator.py $(CURDIR)/debian/todo-indicator/usr/bin/todo-indicator
	install -Dm 644 $(CURDIR)/debian/todo-indicator.desktop $(CURDIR)/debian/todo-indicator/etc/xdg/autostart/todo-indicator.desktop
	install -Dm 755 $(CURDIR)/todotxt/img/panel-icon-light.svg $(CURDIR)/debian/todo-indicator/usr/share/icons/ubuntu-mono-dark/apps/24/todo-indicator.svg
	install -Dm 755 $(CURDIR)/todotxt/img/panel-icon-light.svg $(CURDIR)/debian/todo-indicator/usr/share/icons/ubuntu-mono-dark/apps/22/todo-indicator.svg
	install -Dm 755 $(CURDIR)/todotxt/img/panel-icon-dark.svg $(CURDIR)/debian/todo-indicator/usr/share/icons/ubuntu-mono-light/apps/24/todo-indicator.svg
	install -Dm 755 $(CURDIR)/todotxt/img/panel-icon-dark.svg $(CURDIR)/debian/todo-indicator/usr/share/icons/ubuntu-mono-light/apps/22/todo-indicator.svg
	install -Dm 755 $(CURDIR)/todotxt/img/panel-icon-light.svg $(CURDIR)/debian/todo-indicator/usr/share/icons/hicolor/24x24/status/todo-indicator.svg
	install -Dm 755 $(CURDIR)/todotxt/img/panel-icon-light.svg $(CURDIR)/debian/todo-indicator/usr/share/icons/hicolor/22x22/status/todo-indicator.svg

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_icons
	dh_installmenu
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
